<head>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic&display=swap" rel="stylesheet">
</head>

<h1 class="page-title">お問い合わせ</h1>
<h3 class="page-subtitle">一覧ページ</h3>

<section class="contacts-container">
  <% if @contacts.blank? %>
    <div class="empty-state">
      <p>現在、お問い合わせはありません。</p>
    </div>
  <% else %>
    <% @contacts.each do |t| %>
      <article class="contact-card">
        <dl class="contact-list">
          <div>
            <dt>氏名</dt>
            <dd><%= t.name.presence || "—" %></dd>
          </div>
          <div>
            <dt>メール</dt>
            <dd>
              <% if t.mail.present? %>
                <%= link_to t.mail, "mailto:#{t.mail}", class: "email-chip" %>
              <% else %>
                —
              <% end %>
            </dd>
          </div>
          <div>
            <dt>件名</dt>
            <dd><%= t.title.presence || "—" %></dd>
          </div>
          <div class="about-block">
            <dt>内容</dt>
            <dd>
              <%= simple_format(t.about.to_s, {}, wrapper_tag: "div") %>
            </dd>
          </div>
        </dl>
      </article>
    <% end %>
  <% end %>
</section>


