<section class="student-new-container">
  <article class="form-card">
    <% if @student.errors.any? %>
      <div class="form-errors" role="alert">
        <strong><%= @student.errors.count %>件のエラーがあります。</strong>
        <ul>
          <% @student.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for @student, html: { class: "student-form" } do |f| %>
      <div class="form-grid">
        <div class="form-field <%= 'has-error' if @student.errors[:name].any? %>">
          <%= f.label :name, "名前", class: "form-label" %>
          <%= f.text_field :name, class: "input-text", placeholder: "例）山田 太郎" %>
          <% @student.errors.full_messages_for(:name).each do |m| %>
            <p class="field-error"><%= m %></p>
          <% end %>
        </div>

        <div class="form-field <%= 'has-error' if @student.errors[:about].any? %>">
          <%= f.label :about, "項目名（紹介文など）", class: "form-label" %>
          <%= f.text_area :about, class: "input-textarea", rows: 8, placeholder: "研究テーマ／自己紹介 など" %>
          <% @student.errors.full_messages_for(:about).each do |m| %>
            <p class="field-error"><%= m %></p>
          <% end %>
        </div>

        <div class="form-field <%= 'has-error' if @student.errors[:image].any? %>">
          <%= f.label :image, "画像", class: "form-label" %>
          <%= f.file_field :image, class: "input-file", accept: "image/*" %>
          <p class="help-text">JPG/PNG 推奨</p>
          <% @student.errors.full_messages_for(:image).each do |m| %>
            <p class="field-error"><%= m %></p>
          <% end %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "編集する", class: "btn btn-primary", data: { disable_with: "更新中…" } %>
        <%= link_to "一覧に戻る", students_path, class: "btn btn-ghost" %>
      </div>
    <% end %>
  </article>
</section>
