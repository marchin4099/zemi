<head>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic&display=swap" rel="stylesheet">
</head>

<div class="section">
  <div class="showcustom-fusen">
    <div class="silver-thumbtack">
      <div class="silver-head-bottom"></div>
      <div class="silver-head"></div>
      <div class="silverpin-needle"></div>
    </div>
    <div class="tweet-show">
      <h1><%= @plan.name %></h1> <!-- ← </h1> に修正 -->
      <% if @plan.image.attached? %>
        <%= image_tag @plan.image, size: '300x300' %>
      <% end %>

      <div class="plan-about preline"><%= h(@plan.about) %></div>

    </div>
  </div>
</div>


<div class="back-button-wrapper">
  <%= link_to "一覧に戻る", plans_path, class: "back-button" %>
</div>

